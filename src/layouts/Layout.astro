---
import CommonHead from "../components/CommonHead.astro";
import { screenTransition } from "../lib/screenTransition.mjs";
import "../styles/global.css"
import "../styles/screenAnimation.css"
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate={screenTransition}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <CommonHead />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
