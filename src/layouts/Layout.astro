---
import CommonHead from "../components/CommonHead.astro";
import { screenTransition } from "../lib/screenTransition.mjs";
import "../styles/global.css";
import "../styles/screenAnimation.css";
---

<!doctype html>
<html
  lang="en"
  transition:name="root"
  transition:animate={screenTransition}
  class="scroll-smooth"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <CommonHead />
  </head>
  <body class="bg-foreground text-principal noise-container">
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }

  .noise-container {
    position: relative;
    color: white;
    text-align: center;
  }

  .noise-container::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><filter id="a" x="0" y="0" width="100%" height="100%"><feTurbulence baseFrequency=".2"/></filter><rect width="100%" height="100%" filter="url(%23a)"/></svg>');
    opacity: 0.06;

    animation: noiseAnimation 0.2s infinite linear;
    pointer-events: none;
  }

  @keyframes noiseAnimation {
    0% {
      transform: translate(0, 0);
    }
    10% {
      transform: translate(-5%, 0);
    }
    20% {
      transform: translate(-10%, 0);
    }
    30% {
      transform: translate(5%, 0);
    }
    40% {
      transform: translate(-5%, 0);
    }
    50% {
      transform: translate(-10%, 0);
    }
    60% {
      transform: translate(15%, 0);
    }
    70% {
      transform: translate(0, 0);
    }
    80% {
      transform: translate(-15%, 0);
    }
    90% {
      transform: translate(10%, 0);
    }
    100% {
      transform: translate(5%, 0);
    }
  }
</style>
